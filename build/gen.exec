#!/usr/bin/env ruby

unless ARGV.length == 2
  puts "usage: gen.exec [Debug|Release|Build] exe.name"
  return
end

dir = case ARGV[0].downcase
      when /r.*/; "Release"
      when /d.*/; "Debug"
      else /b.*/; "Build"
      end

puts dir

File.open(".run.sh", "w") { |file| 
  file.puts "#!/bin/sh"
  file.puts "#{dir}/#{ARGV[1]}"
  puts "#{dir}/#{ARGV[1]}"
}

`chmod 700 ./.run.sh`
