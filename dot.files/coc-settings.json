{
  "diagnostic.errorSign": "✖",
  "diagnostic.warningSign": "⚠",
  "diagnostic.infoSign": "ℹ",
  "diagnostic.hintSign": "➤",
  "diagnostic.enable": true,
  "diagnostic.enableSign": false,
  "codeLens.enable": false,

  "python.pythonPath":"/Users/yielding/miniforge/envs/pytorch/bin/python",
  "python.linting.pylintEnabled": false,

  "languageserver": {
    "ccls": {
      "command": "ccls",
      "filetypes": [ "c", "cpp"],
      "rootPatterns": [
        ".ccls",
        "compile_commands.json",
        ".vim/",
        ".git/"
      ],
      "initializationOptions": {
        "cache": {
          "directory": "/tmp/ccls"
        },
        "client" : {
          "snippetSupport": true
        },
        "index": {
          "onChange": true
        },
        "highlight": {
          "lsRanges": true
        }
      }
    }
  }
}
